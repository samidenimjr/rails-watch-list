<div class="container mt-5">
  <h1 class="text-secondary text-center mb-4">🎬 WATCH LIST 🎬</h1>

  <ul class="list-group mt-5 rounded">
  <% @lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-center bg-dark bg-gradient">
      <%= link_to list.name, list_path(list), class: "text-decoration-none text-light fw-bold" %>

      <div>
        <%= link_to '✏️ Edit', edit_list_path(list), class: "btn btn-warning btn-sm mx-2 rounded-pill" %>
        <%= link_to '🗑 Delete', list_path(list), method: :delete, data: { confirm: "Are you sure you want to delete this list?" }, class: "btn btn-danger btn-sm rounded-pill" %>
      </div>
    </li>
  <% end %>
</ul>

<div class="align-self-start mt-2">
    <%= link_to '➕ Start a new list', new_list_path, class: "btn btn-success btn-sm" %>
  </div>

</div>
