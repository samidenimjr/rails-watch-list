<div class="container mt-5">
  <h1 class="text-primary text-center mb-4">ğŸ¬ Watch List</h1>

  <div class="text-center mb-4">
    <%= link_to 'â• Start a new list', new_list_path, class: "btn btn-success btn-lg" %>
  </div>

  <div class="row">
    <% if @lists.any? %>
      <% @lists.each do |list| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm">
            <%= link_to list_path(list) do %>
              <%= image_tag "https://source.unsplash.com/400x250/?movie,cinema", class: "card-img-top", alt: "#{list.name} Cover" %>
            <% end %>

            <div class="card-body text-center">
              <h5 class="card-title"><%= link_to list.name, list_path(list), class: "text-decoration-none text-dark fw-bold" %></h5>
              <div class="d-flex justify-content-center">
                <%= link_to 'âœï¸ Edit', edit_list_path(list), class: "btn btn-warning btn-sm me-2" %>
                <%= link_to 'ğŸ—‘ Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure you want to delete it?' }, class: "btn btn-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-muted">No lists available. Start by creating one!</p>
    <% end %>
  </div>
</div>
