<div class="container mt-5">
  <h1 class="text-center text-warning">🎬 Edit Your Movie List</h1>

  <div class="card shadow-lg p-4 mt-4">
    <%= form_with model: @list, local: true do |form| %>
      <% if @list.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@list.errors.count, "error") %> prevented this list from saving:</h4>
          <ul>
            <% @list.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- List Name Field -->
      <div class="mb-3">
        <%= form.label :name, "List Name", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter a new name for your list" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= form.submit '🎞️ Update List', class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>

  <!-- Back to Lists -->
  <div class="align-self-start mt-2">
    <%= link_to '⬅ Back to Lists', lists_path, class: "btn btn-outline-light align-self-start mt-2" %>
  </div>
</div>
